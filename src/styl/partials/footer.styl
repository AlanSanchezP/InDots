footer
  background-image url("../img/backgrounds/indots-footer.jpg")
  background-position center
  background-repeat no-repeat
  background-size cover
  color white
  padding-top remify(60)
  padding-bottom remify(65)

.footer-link-anchor
  outline 0
  padding 10px 0

.footer-email
  color #735d72
  font-size 12px

.footer-social-network-icon
  height 19px
  width 19px

.footer-link
  color #838383
  font-size remify(12px)
  letter-spacing 0.9px

  &:hover
    color #735d72
    font-weight 700

.footer-div
  display flex
  align-items center
  justify-content space-around
  center-block()
  flex-wrap wrap
  max-width 1026px
  width 90%

.footer-right-column
  display flex
  flex-direction row

.footer-section-links-container
  display flex
  flex-direction row

.footer-column-content
  display flex
  flex-direction column
  margin-right 60px

.footer-logo
  width remify(210)

.footer-left-column
  flex-basis 290px

.footer-icons-container
  display flex
  flex-direction column
  justify-content center

.footer-copyright-info
  color #735d72
  font-size remify(15)
  font-weight $normal
  letter-spacing 0.8px
  line-height 20px
  margin-top 1.25em

.footer-green-text
  color $footergreen
  font-weight $heavy
  font-size remify(18)

.footer-contact-info
  margin-top remify(48)

.footer-email-div
  margin-top remify(11)

.footer-divider
  display block
  height 140px
  background #838383
  width 2px
  border none

.footer-email-span,
.footer-social-media-item
  display inline-block
  margin-left remify(9.5)
  vertical-align middle

.footer-social-media-item
  color white

  &::before
    font-size 22px

.footer-email-span
  font-size remify(16)
  font-weight $heavy

#footer-newsletter-form
  width 312px

  .contact-input
    color white
    background rgba(white, 0.5)
    font-size remify(17)
    margin-top unit(15/17, 'em')

    &::placeholder
      color white

  .button-wrapper
    text-align right
    margin-top remify(22)

  .indots-button
    font-size remify(16)
    padding unit(17/16, 'em') unit(23/16, 'em')

.footer-newsletter-title
  font-size remify(18)

@media screen and (max-width: 767px)
  .footer-left-column,
  .footer-right-column
    flex-basis 100%
    text-align center

  .footer-section-links-container
    justify-content space-around

  .footer-icons-container
    flex-direction row

  .footer-icons-container
    .footer-link-anchor
      margin 0 10px

  .footer-right-column
    flex-direction column

  #footer-newsletter-form
    center-block()
    width 90%

    .button-wrapper
      text-align center

  .footer-divider
    width 60%
    height 1px
    margin remify(50) auto

  .footer-column-content
    margin-right 0
