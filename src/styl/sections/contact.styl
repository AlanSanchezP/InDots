.contact-form-section
  background $btngreen
  center-block()
  padding-bottom remify(120)
  padding-top remify(62)
  text-align center

.contact-form
  margin-top remify(50)
  center-block()
  max-width 436px
  width 90%

  .button-wrapper
    text-align right
    margin-top remify(25)

  .input-wrapper
    margin-top remify(14)
    font-size remify(17)

    &.input
      width 70%

  .indots-button
    font-size remify(16)

  .indots-loader .ball-pulse-sync div
    background #00577b

  textarea.contact-input
    height 180px

@media screen and (max-width: 480px)
  .contact-form
    .button-wrapper
      text-align center

    .input-wrapper.input
      width 100%