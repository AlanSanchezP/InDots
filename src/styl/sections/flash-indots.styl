.flash-indots-section
  padding-top remify(56)

  .flash-indots-introduction
    margin-top 0.7em

  .flash-indots-icons
    margin-top remify(56)

  .flash-indots-instructions
    margin-top remify(118)
    max-width 430px
    font-weight $heavy

  .flash-indots-items
    margin-top remify(13)
    margin-bottom remify(180)

.flash-indots
  text-align center
  center-block()
  max-width 891px
  width 90%

.flash-indots-introduction
  display block
  font-weight $heavy
  font-size remify(22)

.flash-indots-icons
  display flex
  flex-wrap wrap
  max-width 670px
  justify-content space-around
  center-block()
  text-align center

.flash-indots-icon-item
  flex-basis 117px

  &:first-child
    img
      height remify(32)
      margin remify(5) 0 remify(11) 0

  &:nth-child(2)
    img
      height remify(44)
      margin 0 0 remify(4) 0

  &:nth-child(3)
    img
      height remify(26)
      margin remify(4) 0 remify(18) 0

  &:nth-child(4)
    img
      height remify(35)
      margin remify(3) 0 remify(10) 0

  &.short
    flex-basis 58px

  img
    display inline-block
    transition transform 0.2s

    &:hover
      transform scale(1.3)

  span
    display block
    font-size remify(14)

.flash-indots-instructions
  display block
  center-block()
  font-size remify(22)
  line-height 0.95

.flash-indots-items
  display flex
  justify-content space-around
  flex-wrap wrap

.flash-indots-item
  background $lightgray
  font-size remify(18)
  margin-top 2em
  width 272px

.flash-indots-item-photo
  height 264px

.flash-indots-item-name
  text-align center
  min-height remify(80)

  span
    width 90%

@media screen and (max-width: 460px)
  .flash-indots-icon-item
    flex-basis 40% !important

    &:nth-child(n + 3)
      margin-top remify(50)
