.courses-section
  padding-top remify(44)
  padding-bottom remify(133)
  text-align center

  .courses-items
    max-width 880px
    width 90%

.courses-introduction
  font-size remify(18)
  line-height 1.17
  margin-top unit(49/18, 'em')
  center-block()
  max-width 552px
  width 90%

.courses-items
  display flex
  align-items flex-start
  justify-content space-around
  flex-wrap wrap
  center-block()

.courses-item
  background $lightgray
  color $darkgray
  max-width 363px
  flex-basis 100%
  margin-top remify(71)

.courses-item-title
  font-size remify(22)
  padding 0.5em 0.4em
  font-weight $medium
  text-align center

.courses-item-photo
  height 266px

.courses-item-title-author
  display flex
  justify-content space-between
  align-items center
  width 90%
  margin-left 3%

.courses-item-info
  text-align left

.courses-item-author-photo
  box-sizing initial
  simple-border('all', 3px, $lightgray)
  margin-top -44px
  width 88px

.courses-item-introduction
  font-size remify(15.5)
  font-weight $light
  flex-basis calc(100% - 108px)
  padding-top 1em

.courses-item-description
  color $gray
  font-weight $book
  font-style italic
  font-size remify(12)
  margin-top 1.2em
  padding-bottom 0.6em
  width 88%
  center-block()