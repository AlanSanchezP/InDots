.blog-section
  font-size 18px
  padding-top 3.33em
  text-align center

  .blue-title
    font-size 2em

.blog-wrapper
  align-items flex-start
  display flex
  flex-wrap wrap
  justify-content space-between
  center-block()
  margin-top 3.33em
  margin-bottom 5.7777em
  max-width 860px
  text-align left
  width 90%

.blog-articles-column
  flex-basis 509px
  padding 0

.blog-sidebar
  flex-basis 262px

.blog-article:not(:first-child)
  margin-top 4.4444em

.blog-article-cover
  background $grey
  height 227px

.blog-article-title
  color #084c8b
  display block
  line-height 1.1
  font-size 1.2777em
  margin 1em 0 0.3em 0

a.blog-article-title:hover
  color lightness(#084c8b, 38%)

.blog-article-date
  color #575656
  display block
  font-size 10px

.blog-article-excerpt
  color $gray1
  font-size 0.8333em
  line-height 1.3333
  padding 0
  margin-bottom 0.3em
  margin-top 0.6428em

.blog-article-link
  color $btngreen

  &, &:hover, &:focus &:active
    text-decoration underline

  &.go-to-article
    font-size 0.7777em

    &:hover
      color lightness($btngreen, 45%)

.blog-newsletter-title
  color $darkgrey
  font-size 0.96em
  margin 0
  padding 0

.blog-newsletter-form
  .contact-input
    font-size 0.95em
    margin 0
    margin-top 0.8em
    padding 1em 1.5em 0.9em 1.5em
    width 100%

  .indots-button
    font-size 0.85em
    margin-top 1.1em
    padding 1em 1.3em 0.8em 1.3em

  label.error
    font-size 0.95em
    margin 0
    margin-top 0.4em
    padding 0

  .form-message
    font-size 0.95em
    margin-top 0

    &.error, &.success
      margin-top 1em

.recent-content-title
  color #326197
  font-size 1.2222em
  margin 0
  margin-top 2em

.recent-content-list
  font-size 0.8888em
  margin 0
  padding 0
  list-style-type none

  li
    margin-top 1.2em

  a
    color $gray1

    &, &:hover, &:active, &:focus
      text-decoration underline

    &:hover, &:active, &:focus
      color lightness($gray1, 45%)

@media screen and (max-width: 910px)
  .blog-wrapper
    justify-content center

  .blog-articles-column,
  .blog-sidebar
    flex-basis 100%
    max-width 509px

  .blog-sidebar
    display flex
    justify-content space-between
    flex-wrap wrap
    margin-top 5em

  .blog-newsletter-form,
  .recent-content-content
    flex-basis 45%

  .blog-newsletter-title
    line-height 1.2

  .recent-content-title
    margin-top 0

@media screen and (max-width: 566px)
  .blog-section
    font-size 16.5px

  .blog-wrapper
    margin-bottom 4.8em
    margin-top 2.3em

  .blog-article-cover
    height 40.1vw

  .blog-sidebar
    margin-top 3.5em
    text-align center

  .blog-newsletter-form,
  .recent-content-content
    flex-basis 100%

  .recent-content-content
    margin-top 3em