.home-carousel
  color white
  height calc(95vh - 72px)

  @media screen and (orientation: portrait)
    @media screen and (min-height: 400px) and (min-width: 400px)
      max-height 76vw

  .slick-list,
  .slick-track
    height 100%

  .slick-prev,
  .slick-next
    cursor pointer
    background $blue
    position absolute
    height remify(43)
    bottom remify(34)
    z-index 3
    width remify(43)
    text-align center

    &::before
      font-size remify(30)
      line-height 1.35

    &:hover
      background lightness(#00577b, 30%)

  .slick-prev
    left 3%

  .slick-next
    right 3%

  .slick-disabled
    display none !important

  .item
    display flex
    height 100%
    padding-bottom 7em
    overflow hidden

    @media screen and (max-height: 400px)
      padding-bottom 3em

  .item-div
    width 80%
    min-width 288px
    text-align left
    position relative
    z-index 2

  .item-content
    max-width 344px

  .item-title
    font-size remify(39)

  .item-text
    font-size remify(18)
    line-height 1.17
    padding-bottom unit(38/18, 'em')
    margin-top unit(19/18, 'em')

  .indots-button
    font-size remify(18)
    padding 0.8em 1.2em

.home-introduction
  margin-top unit(89/18, 'em')
  margin-bottom unit(127/18, 'em')
  max-width 655px
  text-align center
  font-size remify(18)
  width 90%
  center-block()

  p
    line-height 1.17
    padding-bottom unit(39/18, 'em')

  .indots-button
    font-size remify(17)
    padding 1em 1.5em

.home-gradient
  background-image linear-gradient(to right, #b5bdc1, #7e888e)

.home-gradient-logo-section
  position relative
  padding remify(36) 0 remify(35) 0

.gradient-logo
  position absolute
  left 50%
  top 0
  transform translate(-50%, -38%)
  width 80px
  z-index 3

.home-gradient-items
  color white
  display flex
  align-items flex-start
  justify-content space-around
  flex-wrap wrap
  width 90%
  max-width 950px
  text-align center
  z-index 2
  center-block()

.home-gradient-item
  flex-basis 23%
  max-width 180px

  img
    height 80px

  p
    font-style normal
    font-size remify(14)
    letter-spacing 1.2px
    line-height 21px
    margin-top unit(23/14, 'em')

.top-courses
  center-block()
  text-align center
  max-width 880px
  width 90%
  padding remify(70) 0 remify(105) 0

  .courses-items
    margin-top remify(16)

.top-courses-title
  font-size remify(22)
  padding-bottom unit(33/22, 'em')

.top-courses-text
  font-size remify(18)
  width 100%
  max-width 655px
  line-height 1.17
  center-block()

.home-newsletter-div
  center-block()
  padding-top remify(63)
  padding-bottom remify(63)
  max-width 580px
  width 90%

.home-newsletter-title
  color white
  text-align center
  font-weight $medium
  font-size remify(18)
  line-height 1.17
  center-block()
  max-width 552px

#homepage-newsletter-form
  margin-top remify(14)
  display flex
  justify-content space-between

  .left
    flex-basis 427px

  .inputs
    display flex
    justify-content space-between
    flex-wrap wrap
    width 100%

  .form-message
    text-align center

    &.error, &.success
      margin-top remify(18)

  .input-wrapper,
  .button-wrapper
    margin-top remify(15)

  .button-wrapper
    flex-basis 135px

  .contact-input
    font-size remify(17)
    font-weight $normal

  .indots-button
    font-size remify(16)
    padding 1.2em 1.75em

.home-flash-indots
  padding-top remify(67)

  .flash-indots-title
    font-size remify(28)

    &::before
      height remify(26)
      width remify(17.4)
      margin-top remify(-4)
      margin-right remify(9)

  .flash-indots-icons
    margin-top remify(43)

  .flash-indots-instructions
    margin-top unit(90/22, 'em')
    max-width 545px

  .flash-indots-items
    margin-top remify(49)

  .view-more
    display inline-block
    font-size remify(18)
    padding unit(15/18, 'em') unit(52/18, 'em')
    margin-top remify(91)
    margin-bottom remify(73)

.flash-indots-line
  display block
  height 1px
  border none
  margin-top remify(70)
  simple-border('top', 1px, $lightergray)
  center-block()
  max-width 510px
  width 80%

@media screen and (max-width: 880px)
  #homepage-newsletter-form
    flex-wrap wrap
    justify-content center

    .inputs
      justify-content center

    .input-wrapper,
    .button-wrapper
      flex-basis 100% !important
      max-width 500px

    .button-wrapper
      text-align center
      margin-top remify(20)

@media screen and (max-width: 730px)
  .home-gradient-item
    flex-basis 40%
    max-width initial

    &:nth-child(n + 3)
      margin-top remify(50)


/*Styles new homepage*/

.homepage-container
  margin 0 37px

.homepage-cover
  height auto
  padding-left 20%
  position relative
  width 100%

.homepage-cover-img
  height 100%
  width 100%

.homepage-cover-img-mobile
  display none

.homepage-cover-button-container
  position absolute
  right 37.7%
  top 57%

.homepage-cover-button
  background-color #4d374d
  color #fff

.homepage-cover-button:hover
  background-color transparent
  color #4d374d

/*Second section*/

.homepage-second-section
  background-image url("../img/backgrounds/homepage-bg-1.jpg")
  background-position center
  background-repeat no-repeat
  background-size cover
  height 235px
  margin-top 50px
  position relative

.homepage-second-section-cards
  display flex
  left 60px
  position absolute
  top 89px

.homepage-second-section-card-container:nth-child(2)
  margin 0 20px

.homepage-second-section-card-container,
.homepage-section-card
  height 237px
  width 246px

/*Third section*/

.homepage-third-section
  background-image url("../img/backgrounds/homepage-bg-2.jpg")
  background-position center
  background-repeat no-repeat
  background-size cover
  display flex
  flex-direction row
  height auto
  padding 167px 5% 100px 10%
  width 100%

.homepage-third-section-infor-container
  padding-right 10%

.homepage-third-section-title-container
  margin-bottom 27px

.homepage-third-section-img-container,
.homepage-img-1
  height auto
  width 100%

.homepage-third-section-info-special
  display flex
  flex-direction row
  margin 35px 0

.homepage-third-section-decorator
  border-left solid 3px $indotsGreen
  height auto
  margin 0 22px 0 27px

/*Fourth section*/

.diamond-purple
  width 10px
  height 10px
  background $indotsPurple
  -webkit-transform rotate(135deg) skew(15deg, 15deg)
  -moz-transform rotate(135deg) skew(15deg, 15deg)
  -ms-transform rotate(135deg) skew(15deg, 15deg)
  -o-transform rotate(135deg) skew(15deg, 15deg)
  margin 18px auto
  transform rotate(135deg) skew(15deg, 15deg)

/*Five section*/

.homepage-five-section
  background-image url("../img/backgrounds/homepage-bg-4.jpg")
  background-position bottom
  background-repeat no-repeat
  background-size cover

.homepage-five-section-content
  height 423px
  padding-top 71px
  padding-left 68px
  max-width 542px

.homepage-five-section-description-container
  margin-top 35px

.homepage-five-section-description
  font-size remify(18px)
  line-height 32px

.homepage-five-section-footer
  background-image url("../img/backgrounds/homepage-bg-3.jpg")
  background-position center
  background-repeat no-repeat
  background-size cover
  height 190px
  position relative

.homepage-five-section-courses-container
  bottom -40px
  position absolute
  right 29px

.homepage-five-section-courses
  height 330px
  width 281px

.course-link-margin
  margin-bottom 105px
  margin-left 29px

/*Six section*/

.homepage-six-section
  margin-top 75px
  margin-bottom 30px

.homepage-six-section-content
  position relative

.homepage-form-img
  height auto
  width 100%

.homepage-newsletter-text
  font-size remify(18px)
  letter-spacing 1.1px
  line-height 32px

.homepage-form-container
  bottom 0
  left 45%
  position absolute
  top 15%

.homepage-form-tag
  display flex
  flex-direction column

.indots-input-base
  background-color #e9e9e9
  border none
  color #aaaaaa
  font-size remify(14px)
  height 43px
  padding 0 16px
  width 404px

  &:placeholder
    color #aaaaaa

  &:nth-child(1)
    margin-bottom 15px

.home-sections-carousel,
.homepage-courses-carousel
  display none

.homepage-section-card:hover
  transform scale(0.9)
  transition all 0.3s

.homepage-section-card
  transition all 0.3s

.homepage-six-section-mobile
  display none

@media screen and (max-width 768px)

  .homepage-container
    margin 0

  .homepage-cover
    padding 0 0 0 20px

  .homepage-cover-img
    display none

  .homepage-cover-img-mobile
    display block
    height 100%
    width 100%

  .homepage-cover-button-container
    right 9%

  .homepage-cover-button
    font-size remify(11px)
    height 35px
    margin-top 15px
    padding 0 20px

  .homepage-five-section,
  .homepage-six-section,
  .homepage-six-section-mobile
    padding 0 25px

  .homepage-third-section
    flex-direction column

  .homepage-second-section-cards,
  .homepage-five-section-courses-container
    display none

  .homepage-five-section-courses
    height 273px
    width 230px

  .home-sections-carousel
    display block
    padding-top 50px

  .homepage-five-section
    background-position top
    background-size contain

  .homepage-five-section-content
    height auto
    padding-bottom 30px
    padding-left 0

  .homepage-five-section-footer
    background-position left
    height 128px
    margin-top 70px

  .homepage-six-section
    display none

  .homepage-newsletter-text
    font-size remify(18px)
    letter-spacing 0.9px
    line-height 20px

  .homepage-form-container
    left 10px
    right 10px
    top 10px

  .homepage-form-container
    .indots-input-base
      width 100%

  .newsletter-button-container
    display flex
    justify-content flex-end

  .newsletter-button
    margin-top 3px

  .homepage-courses-carousel
    display block
    margin-top -200px
    
  .homepage-courses-carousel
    .slick-slide
      display none
  
  .homepage-courses-carousel
    .slick-current
      display block

  .homepage-six-section-mobile
    display block
    margin 100px 0 50px 0

@media screen and (min-width 769px) and (max-width 970px)
  .homepage-five-section-content
    height 510px

@media screen and (min-width 769px) and (max-width 840px)
  .homepage-second-section-card-container,
    .homepage-section-card
      height 190px
      width 200px

  .homepage-second-section-cards
    left 0
    margin 0 auto
    right 0
    width 595px
